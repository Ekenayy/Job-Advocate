{
  "manifest_version": 3,
  "name": "Job Advocate Chrome Extension",
  "version": "1.0.0",
  "host_permissions": [
    "http://localhost/",
    "ws://localhost/"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' http://localhost:5173/ ws://localhost:5173/ ws://localhost:* http://localhost:3000/"
  },
  "action": { 
    "default_title": "Side Panel",
    "default_icon": "src/assets/favicon.svg"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["sidePanel", "activeTab"],
  "background": {
    "service_worker": "./src/background/background.ts"
  },
  "options_page": "src/optionsPage/optionsPage.html",
  "content_scripts": [
    {
      "js": ["src/content/content.tsx"],
      "matches": ["<all_urls>"]
    }
  ]
}
