{
  "manifest_version": 3,
  "name": "Job Advocate Chrome Extension",
  "version": "1.0.0",
  "host_permissions": [
    "http://localhost/",
    "ws://localhost/",
    "https://*.clerk.com/*",
    "https://*.clerk.accounts.dev/*",
    "https://*.clerk.accounts.io/*",
    "https://*.clerk.accounts.run/*",
    "https://*.clerk.app/*",
    "https://*.supabase.co/*",
    "https://*.clerk-telemetry.com/*",
    "https://inreach-staging.onrender.com/*",
    "https://job-advocate.onrender.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' http://localhost:5173/ ws://localhost:5173/ https://www.googleapis.com/ https://*.clerk.com https://*.clerk.accounts.dev https://*.clerk.accounts.io https://*.clerk.accounts.run https://*.clerk.app https://*.clerk-telemetry.com https://*.supabase.co https://inreach-staging.onrender.com https://job-advocate.onrender.com"
  },
  "action": { 
    "default_title": "Side Panel",
    "default_icon": "src/assets/favicon.svg"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": [
    "sidePanel",
    "identity",
    "identity.email",
    "storage",
    "cookies",
    "activeTab"
  ],
  "oauth2": {
    "client_id": "807605227538-58ddgsc8s8prmso6e8laaddp8q949hvg.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.send"
    ]
  },
  "background": {
    "service_worker": "./src/background/background.ts"
  },
  "options_page": "src/optionsPage/optionsPage.html",
  "content_scripts": [
    {
      "js": ["src/content/content.tsx"],
      "matches": ["<all_urls>"]
    }
  ]
}